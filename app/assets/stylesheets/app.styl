  opacity: 0
  height: 0
}
a{
  text-decoration none
  color: #969696;
}

* {
  box-sizing: border-box;
}

body {

}
.ruble{
  font-family: 'PTSans', serif;
}
.error{
  position: fixed
  width: 100%
  height:  100%
  background-color rgba(0,0,0,.2)
  display: flex
  top: 0px
  left: 0px
  justify-content: center
  align-items center
  z-index: 999
  &-wrapper{
    width: 500px
    background-color white
    padding: 40px
    text-align center
  }
}

.noSupport{
  width: 100%;
  height: 100%;
  display: table;
  position: fixed;
  z-index: 10000
  top: 0;
  left: 0;
  background-color rgba(0, 0, 0, 0.5)
  &_wrapper{
    display: table-cell;
    text-align: center;
    vertical-align: middle;
  }
  &_block{
    display: inline-block
    background-color white
    padding: 20px
    width: 500px
  }
  &-title{
    font-size 20px
    padding-bottom: 10px
  }
}

  .popup-block{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
    display: table;
    &:before{
      content ''
      position absolute
      width 100%
      height 100%
      background rgba(0,0,0,0.5)
      top: 0
      left 0
    }
    &__inner{
      display: table-cell;
      vertical-align: middle;
    }
    &__modal{
      width: 750px;
      margin: 0 auto;
      position: relative;
      img{
        width 100%

      }
    }
    .personal{
      &__text{
        width 470px
        background-color: #fff;
        padding: 40px 40px 76px;
        margin: 0 auto;
        position: relative;
      }
      &__title{
        color: #000;
        font-size: 16px;
        font-family: 'MuseoSansMedium';
      }
      &__description{
        p{
          font-size: 12px;
        }
      }
    }
  }

