.button{
  margin-top: 32px
  color: #2691b3;
  font-family: 'MuseoSansMedium'
  font-size: 16px;
  border: 2px solid #2691b3;
  background-color rgba(0,0,0,.0)
  cursor: pointer
  line-height: 41px
  padding: 0px 30px
  position: relative
  transition .3s
  &:disabled{
    opacity: .2
  }
  &:before{
    content: ''
    position: absolute
    background-color: #2691b3;
    width: 0px
    height: 100%
    transition .4s
    top: 0px
    left: 0px
  }
  span{
    position: relative
    z-index: 2
  }
  &:hover{
    color: #fff
    &:before{
      width: 100%
    }
  }
}
.button-dark{
  color: #474544;
  border-color #474544
  &:before{
    background-color #474544;
  }
}

.button-green{
  color: #84b923;
  border-color #84b923
  background-color white
  z-index: 4
  &:before{
    background-color #84b923;
  }
}

.header{
  font-family: 'MuseoSansMedium'
  position: relative
  transition .5s
  z-index: 41
  &__all{
    overflow: hidden
  }
  &__shoes{
    display: flex
    width: 100%
    transition 1s
    &-a{
      transform   translateX(0%)
    }
    &-b{
      transform   translateX(-100%)
    }
    &-c{
      transform   translateX(-200%)
    }
    &-d{
      transform   translateX(-300%)
    }
  }
  &__info{
    display flex
    justify-content: space-between
    margin: 0px 40px
    color: #969696;
    font-size: 14px;
    padding-top: 23px
    a{
      border-bottom: 1px solid rgba(150, 150, 150, .3);
      transition: .3s
      &:hover{
        color: #464342;
        border-bottom: 1px solid rgba(150, 150, 150, .6);
      }
    }
    &-left {
      display: flex
      justify-content: space-between
      & div{
        margin-right 30px
      }
    }
  }
  &__logo{
    display: flex
    justify-content: center
    padding: 20px 0px
    &-wrapper{
      cursor: pointer
      position: relative
      overflow hidden
      width: 200px
      height: 40px
      &:hover{
        .header__logo-hover{
          &:before{
            height: 38px
          }
        }
      }
    }
    .animate-logo{
      animation: jump .6s linear ;
    }
    &-img{
      background url("./img/logo.svg") no-repeat
      width: 200px
      height: 40px
      position: absolute
      background-size 100%
      z-index:3
    }
    &-hover{
      position: absolute
      &:after{
        content: ''
        width: 196px
        height: 38px
        position: absolute
        z-index:1
        top: 2px
        left: 2px
        background-color: #474544
      }
      &:before{
        content: ''
        width: 196px
        height: 0px
        position: absolute
        z-index: 2
        top: 2px
        left: 2px
        background-color: #84b923;
        transition .5s
      }
    }
  }
  &__menu{
    display: flex
    justify-content: center
    position: relative
    height: 38px
    &:after{
      content ''
      position: absolute
      background-color #e6e6e6
      width: 100%
      height: 1px
      bottom: 0
      left: 0px
      z-index: 0
    }
    &_items{
      display: flex
      list-style none
      justify-content: space-between
      padding:0
      margin: 0
    }
    &_item{
      margin-right: 40px
      transition: .3s
      color: #464342;
      cursor: pointer
      position: relative
      border-bottom: 0px solid rgba(132, 185, 35, 0.8);
      z-index: 1
      a{
        height: 100%
        display: inline-block
      }
      &:last-child{
        margin-right: 0px
      }
      &-active{
        color: rgba(70, 67, 66, 0.8);
        border-bottom: 4px solid rgba(70, 67, 66, 0.8);
      }
    }
    .router-link-active{
      color: #84b923;
      border-bottom: none
      position: relative
      border-bottom: 4px solid rgba(132, 185, 35, 1)
      a{
        color: #84b923
      }
      &:hover {
        color: #84b923;
        border-bottom: 4px solid rgba(132, 185, 35, 1)
      }
    }
  }
}

@keyframes jump {
  0%{
    transform: translate(0);
  }
  10%{
    transform: translate(-15px);
  }
  20%{
    transform: translateX(0);
  }
  30%{
    transform: translate(15px);
  }
  40%{
    transform: translateX(0);
  }
  50%{
    transform: translateX(-8px);
  }
  60%{
    transform: translateX(0);
  }
  70%{
    transform: translateX(8px)
  }
  80%{
    transform: translateX(0);
  }
  100%{
    transform: translateX(0);
  }
}



