.selectItem-enter-active {
  transition: all .5s ease;
}
.selectItem-leave-active {
  transition: all .5s ease;
}
.selectItem-enter, .selectItem-leave-to{
  opacity: 0;

  transform translateX(30px)
}
.payment{
  margin-top: 26px;
  padding-bottom  0px
  padding-left: 0px
  padding-right: 0px
  &-padding{
    padding-bottom: 26px
  }
  .basket__shipping_item-title{
    padding-left: 70px
  }
  &__items{
    margin-top: 20px
  }
  &__item{
    margin-bottom:  10px
    width: 320px
    display: flex
