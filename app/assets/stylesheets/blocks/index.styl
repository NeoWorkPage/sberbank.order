.index{
  border: 20px solid #4a4a4a;
  width: 100%;
  height: 100vh;
  padding: 20px;
  min-height: 700px;
  font-family: 'Avenir', Helvetica, Arial, sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  text-align: center;
  color: #2c3e50;
  &__header{
    height: 60px;
    width: 100%;
  }
  &__wrapper{
    display: flex;
    margin-top: 40px;

  }
}



.basket{
  &__logo{
    display: flex
    height: 100px
    border-bottom: 1px solid #e6e6e6;
    align-items: center
    padding: 0px 40px

    &-prev{
      font-size: 14px;
      color: #969696;
      width: 111px
      border-bottom: 1px solid rgba(150,150,150,0.3);
      transition: 0.3s;
      cursor pointer
      &:hover{
        color: #464342;
        border-bottom: 1px solid rgba(150,150,150,0.6);
      }
    }
    &-logo{
      width: calc( 100% - 111px)
      display: flex
      justify-content: center
      .header__logo-wrapper{
        margin-right: 111px
      }
    }
  }
  &__ordering{
    max-width: 900px
    margin: 0 auto
    margin-top: 50px
  }
  &__design{
    &-title{
      font-size: 50px;
      font-family: 'MuseoSansMedium'
      color: #464342;
      margin-bottom: 40px
      text-align center
    }
    &_items{

    }
    &_item{
      position: relative
      display: flex
      padding: 20px 0px
      border-bottom: 1px solid #d8d8d8;
      justify-content: space-between
      &:last-child {
        border-bottom: 1px solid rgba(0,0,0,0)
      }
    }
    &-img{
      width:  160px
      display: flex
      align-items: center
      justify-content center
      margin-right:30px
      height 120px
      img{
        width: 100%
      }
    }
    &_wrapper{
      width: 35%
      margin-top: 5px
    }
    &-name{
      font-size: 24px;
      font-family: 'MuseoSansMedium'
      border-bottom: 1px solid rgba(150,150,150,0.3);
      display: inline-block
      cursor: pointer
      transition .3s
      a{
        color: rgba(70, 67, 66, 1);
      }
      &:hover{
        border-bottom: 1px solid rgba(150,150,150,0.9)
      }
    }
    &_info{
      display: flex
      flex-direction column
      margin-top: 10px
      &-name{
        color: #464342;
        font-family: 'MuseoSansMedium'
        font-size: 18px;
      }
      &-input{
        font-family: 'MuseoSansMedium'
        font-size: 18px;
        color: #464342
        padding-left: 10px
        .select{
          position: relative
          &__active{
            height: 40px
            line-height: 19px
            &:after{
              top: 15px
            }
          }
        }
      }
      &-item{
        display: flex
        width: 140px
        &:last-child{
          padding-top: 5px
        }
      }
    }
    &_right{
      width: 40%
      margin-top: 10px
    }
    &_price{
      position: relative
      display: flex
      flex-direction column
      align-items: flex-end
      height: 100px
      &-current{
        color: #84B923;
        font-size: 40px;
        font-family: 'MuseoSansMedium'
        display: flex

      }
      &-discount{
        font-size: 40px;
        color: #84B923;
        margin-left: 10px
        font-family: 'MuseoSansMedium'
      }
      .price_active{
        font-size: 25px;
        display: inline-block
        position: relative
        margin-left: 10px
        color: #848484;
        &:after{
          content: ''
          position: absolute
          height: 1px
          width: 100%
          background-color: #969696;
          top: 50%
          left: 0
          transform rotate(15deg)
        }
      }
    }
    &_delete{
      display: flex
      justify-content: flex-end
      margin-top 40px
      span{
        display: inline-block
        font-size: 14px;
        color: #464342;
        cursor: pointer
        border-bottom: 1px solid rgba(70, 67, 66, .3);
        transition .3s
        &:hover{
          border-bottom: 1px solid rgba(70, 67, 66, 1);
        }
      }
    }
  }
  &__shipping{
    border-right: 1px solid #d8d8d8;
    border-left: 1px solid #d8d8d8;
    padding-top: 30px

    &_item {
      border-bottom: 1px solid  #d8d8d8;
      padding-left: 70px
      padding-right  70px
      position: relative
      &-count{
        width: 35px
        height: 35px
        border-radius 50%
        text-align center
        font-size: 20px;
        line-height: 35px;
        background-color rgba(132, 185, 35, 1)
        color: white;
        font-family: 'MuseoSansMedium'
        position: absolute
        left: 20px
        top: 0px
      }
      &-title{
        color: #464342;
        font-family: 'MuseoSansMedium'
        line-height: 36px;
        font-size: 28px;
        transition .3s
        &_active{
          color #84b923
        }

      }
    }
  }
  .disabled{
    .basket__shipping_item-title{
      color rgba(0, 0, 0, 0.2)
    }
    .basket__shipping_item-count{
      background-color rgba(0, 0, 0, 0.2)
    }
  }
  &__footer{
    display: flex
    margin: 0 auto
    max-width: 780px
    justify-content: space-between
    align-items center
    font-size: 14px;
    color: #969696;
    font-family: 'MuseoSansMedium'
    margin-top:150px
    margin-bottom: 60px
    &_cop{
      margin-left: -60px
    }
    &_icon{
      display: flex
      &-item{
        width 32px
        height 32px
        margin-right: 8px
        border-radius: 20px
        border: 2px solid rgba(150, 150, 150, 0.3);
        transition .3s
        &:hover{
          border: 2px solid rgba(150, 150, 150, 0.5);
        }
        &-vk{
          background: url("/static/img/social/vk.svg")
          background-repeat: no-repeat
          background-size: 9px
          background-position: center
        }
        &-insta{
          background: url("/static/img/social/insta.svg")
          background-repeat: no-repeat
          background-size: 16px
          background-position: center
        }
        &-f{
          background: url("/static/img/social/F.svg")
          background-repeat: no-repeat
          background-size: 12px
          background-position: center
        }

        &-facebook{
          background: url("/static/img/social/facebook.svg")
          background-repeat: no-repeat
          background-size: 8px
          background-position: center
        }
      }
    }
  }
}

.happy{
